---
interface Props {
  author: string;
  genre: string;
  image: string;
  synopsis: string;
  title: string;
  year: number;
  showDetails?: boolean;
}

const {
  author,
  genre,
  image,
  synopsis,
  title,
  year,
  showDetails = false,
} = Astro.props;
---

<div class="flex relative min-h-80">
  <img
    alt={title}
    class="absolute inset-0 w-full h-full object-fill object-center"
    src={image}
  />
  {
    showDetails && (
      <div class="flex flex-col px-4 py-5 relative z-10 w-full border-4 border-gray-800 bg-gray-900 opacity-0 hover:opacity-100">
        <h4 class="text-lg font-medium text-white mb-3">{title}</h4>
        <span class="tracking-widest text-sm font-medium text-indigo-400 mb-1">
          <strong>Author:</strong>
          {author}
        </span>
        <span class="tracking-widest text-sm font-medium text-indigo-400 mb-1">
          <strong>Genero:</strong>
          {genre}
        </span>
        <span class="tracking-widest text-sm font-medium text-amber-200 mb-1">
          Publicado en {year}
        </span>
        <p class="leading-relaxed">{synopsis}</p>
      </div>
    )
  }
</div>
